{
  "extends": "./tsconfig.server.json",
  "compilerOptions": {
    "outDir": ".nest",
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": false,
    "noEmit": false,
    "removeComments": true
  },
  "include": [
    "src/**/*"
  ],    
  "exclude": [
    "node_modules",
    "test",
    "**/*spec.ts",
    "**/*.test.ts",
    ".next",
    ".nest",
    "app"
  ]
}